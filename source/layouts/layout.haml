!!!
%html.no-js{lang:"en"}
  %head
    %meta{charset:"utf-8"}
    
    /Always force latest IE rendering engine or request Chrome Frame
    %meta{content:"IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{name:"viewport", content:"width=device-width, initial-scale=1, maximum-scale=1"}
    
    /Use title if it's in the page YAML frontmatter
    %title
      = data.page.title || "The Middleman" 
    
    = stylesheet_link_tag "normalize", "all"
    /= javascript_include_tag "Stats"
    /= javascript_include_tag "http://jsconsole.com/remote.js?315ECF50-589D-4D08-A01A-1ECFAD87C6A3"
    = javascript_include_tag  "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js", "modernizr", "paper", "jquery.scrollTo-1.4.3.1-min", "all"
  
  %body{:class => page_classes}
    %nav#nav.fastclick
      %a.menu_icon{href:"#nav"} <span class="icon">M</span><span class="close">X</span>
      %ul
        %li
          %a.welcome{href:"#welcome"} start
        %li
          %a.about{href:"#about"} about me
        %li
          %a.work{href:"#work"} my work
        %li
          %a.contact{href:"#contact"} contact me
    %canvas#bg_paper.bg
    #bg_no_canvas.bg
      - circle_index = 0
      - sizes = "biggest big medium small smallest".split(" ")
      - sizes.each do |s|
        .layer{class:s}
          - 2.times do
            .bg_circle_container{id:"bg_circle_container#{circle_index}"}
              - circle_index += 1
              - 4.times do |i|
                .bg_circle{class:"bg_circle#{i}"}

    #wrapper
      = yield

