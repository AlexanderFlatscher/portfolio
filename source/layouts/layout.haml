!!!
%html.no-js
  %head
    %meta{charset:"utf-8"}
    
    /Always force latest IE rendering engine or request Chrome Frame
    %meta{content:"IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    
    /Use title if it's in the page YAML frontmatter
    %title
      = data.page.title || "The Middleman" 
    
    = stylesheet_link_tag "normalize", "all"
    = javascript_include_tag  "//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js", "modernizr", "paper", "jquery.scrollTo-1.4.3.1-min", "all"
  
  %body{:class => page_classes}
    /#bg-raphael.bg
    /%p#fps{style:"position:fixed;"}
    %nav
      %a.menu_icon{href:"#"} &#x2630;
      %ul
        %li
          %a{href:"#welcome"} start
        %li
          %a{href:"#about"} about me
        %li
          %a{href:"#work"} my work
        %li
          %a{href:"#contact"} contact me
    #nav_bg
    %canvas#bg_paper.bg
    #wrapper
      = yield

